{
  if (request != null && request.getCookies() != null) {
    for (    Cookie cookie : request.getCookies()) {
      if (cookie.getName().equals(COOKIE_NAME)) {
        cookie.setMaxAge(0);
        cookie.setPath("/");
        cookie.setSecure(true);
        cookie.setValue("-1");
        response.addCookie(cookie);
      }
    }
  }
}
