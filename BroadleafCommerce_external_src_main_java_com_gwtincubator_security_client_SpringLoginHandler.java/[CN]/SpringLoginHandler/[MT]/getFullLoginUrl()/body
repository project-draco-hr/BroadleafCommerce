{
  final StringBuilder sb=new StringBuilder();
  sb.append(getSpringLoginUrl());
  sb.append("?");
  sb.append(getSpringUserNameField());
  sb.append("=");
  sb.append(getLogin());
  sb.append("&");
  sb.append(getSpringPasswordField());
  sb.append("=");
  sb.append(getPassword());
  if (getRememberMe()) {
    sb.append("&");
    sb.append(getSpringRememberMeField());
    sb.append("=true");
  }
  return sb.toString();
}
