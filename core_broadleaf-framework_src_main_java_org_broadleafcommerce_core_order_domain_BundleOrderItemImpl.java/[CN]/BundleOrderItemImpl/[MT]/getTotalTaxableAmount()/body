{
  Money returnValue=convertToMoney(BigDecimal.ZERO);
  if (shouldSumItems()) {
    for (    OrderItem containedItem : getOrderItems()) {
      returnValue=returnValue.add(containedItem.getTotalTaxableAmount());
    }
  }
 else {
    returnValue=super.getTotalTaxableAmount();
  }
  return returnValue;
}
