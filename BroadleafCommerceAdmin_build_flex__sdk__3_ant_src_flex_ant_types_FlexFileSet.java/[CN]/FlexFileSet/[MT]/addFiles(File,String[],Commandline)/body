{
  FileUtils utils=FileUtils.newFileUtils();
  if (spec == null) {
    for (int i=0; i < files.length; i++) {
      cmdl.createArgument().setValue(utils.resolveFile(base,files[i]).getAbsolutePath());
    }
  }
 else {
    for (int i=0; i < files.length; i++) {
      cmdl.createArgument().setValue("-" + spec.getFullName() + equalString()+ utils.resolveFile(base,files[i]).getAbsolutePath());
    }
  }
}
