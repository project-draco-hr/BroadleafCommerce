{
  query="*" + query + "*";
  SolrQuery solrQuery=new SolrQuery().setQuery("searchable:" + query).setRows(searchCriteria.getPageSize()).setStart((searchCriteria.getPage() - 1) * searchCriteria.getPageSize());
  attachSortClause(solrQuery,searchCriteria,namedFacetMap);
  attachActiveFacetFilters(solrQuery,namedFacetMap,searchCriteria);
  attachFacets(solrQuery,namedFacetMap);
  return solrQuery;
}
