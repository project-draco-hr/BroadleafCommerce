{
  toolbar=new ToolStrip();
  toolbar.setWidth100();
  Label label=new Label(title);
  label.setStyleName("blcPromoHeader");
  label.setWrap(false);
  toolbar.addMember(label);
  addMember(toolbar);
  contentLayout=new VStack();
  contentLayout.setStyleName("blcPromoSection");
  addMember(contentLayout);
}
