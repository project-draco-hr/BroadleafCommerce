{
  if (!path.equals(AssociationPath.ROOT)) {
    return super.getLikeProvider(path);
  }
  return new SimpleFilterCriterionProvider(FilterDataStrategy.DIRECT,1){
    @Override public Criterion getCriterion(    String targetPropertyName,    Object[] filterObjectValues,    Object[] directValues){
      return buildCriterion(targetPropertyName,Restrictions.le(targetPropertyName,directValues[0]),Restrictions.le(skuPropertyPrefix + DEFAULT_SKU_PATH_PREFIX + targetPropertyName,directValues[0]));
    }
  }
;
}
