{
  PaymentRequestDTO requestDTO=new PaymentRequestDTO().orderId(order.getId().toString()).orderCurrencyCode(order.getCurrency().getCurrencyCode()).transactionTotal(order.getTotal().toString()).orderSubtotal(order.getSubTotal().toString()).shippingTotal(order.getTotalShipping().toString()).taxTotal(order.getTotalTax().toString());
  populateCustomerInfo(order,requestDTO);
  populateShipTo(order,requestDTO);
  populateBillTo(order,paymentGatewayType,requestDTO);
  populateLineItems(order,requestDTO);
  return requestDTO;
}
