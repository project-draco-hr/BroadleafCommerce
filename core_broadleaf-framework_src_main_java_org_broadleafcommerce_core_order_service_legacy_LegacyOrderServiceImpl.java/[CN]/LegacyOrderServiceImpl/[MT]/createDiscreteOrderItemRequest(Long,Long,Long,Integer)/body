{
  Sku sku=skuDao.readSkuById(skuId);
  Product product;
  if (productId != null) {
    product=productDao.readProductById(productId);
  }
 else {
    product=null;
  }
  Category category;
  if (categoryId != null) {
    category=categoryDao.readCategoryById(categoryId);
  }
 else {
    category=null;
  }
  return createDiscreteOrderItemRequest(sku,product,category,quantity,null);
}
