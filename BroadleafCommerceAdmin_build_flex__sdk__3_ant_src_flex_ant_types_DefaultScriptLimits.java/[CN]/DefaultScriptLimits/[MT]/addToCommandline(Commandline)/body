{
  if (rec == -1)   throw new BuildException("max-recursion-depth attribute must be set!");
 else   if (exe == -1)   throw new BuildException("max-execution-time attribute must be set!");
 else {
    cmdl.createArgument().setValue("-" + spec.getFullName());
    cmdl.createArgument().setValue(String.valueOf(rec));
    cmdl.createArgument().setValue(String.valueOf(exe));
  }
}
