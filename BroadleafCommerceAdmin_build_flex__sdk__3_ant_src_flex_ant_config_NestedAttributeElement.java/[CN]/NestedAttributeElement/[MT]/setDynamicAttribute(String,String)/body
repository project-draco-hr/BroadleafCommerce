{
  boolean isSet=false;
  for (int i=0; i < attribs.length && !isSet; i++) {
    if (attribs[i].equals(name)) {
      values[i]=value;
      isSet=true;
    }
  }
  if (value.indexOf(COMMA) != -1) {
    valueHasComma=true;
  }
  if (!isSet)   throw new BuildException("The <" + spec.getFullName() + "> type doesn't support the \""+ name+ "\" attribute.");
}
