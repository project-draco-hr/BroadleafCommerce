{
  DiscreteOrderItemImpl item=new DiscreteOrderItemImpl();
  Sku sku=new SkuImpl();
  sku.setId(skuId);
  sku.setRetailPrice(new Money(retailPrice));
  if (salePrice != null) {
    sku.setSalePrice(new Money(salePrice));
  }
  sku.setDiscountable(isDiscountable);
  item.setSku(sku);
  item.setQuantity(quantity);
  return item;
}
