{
  ConfigVariable var=null;
  for (int i=0; i < variables.length && var == null; i++) {
    if (variables[i].matches(attributeName)) {
      var=variables[i];
    }
  }
  if (var != null) {
    var.set(value);
  }
 else {
    throw new BuildException("The <" + toolName + "> type doesn't support the \""+ attributeName+ "\" attribute.",getLocation());
  }
}
