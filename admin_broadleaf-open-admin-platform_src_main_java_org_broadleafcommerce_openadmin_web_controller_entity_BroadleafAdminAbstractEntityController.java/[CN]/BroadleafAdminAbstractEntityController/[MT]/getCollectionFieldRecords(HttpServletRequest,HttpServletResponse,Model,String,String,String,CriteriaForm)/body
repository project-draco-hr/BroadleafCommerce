{
  String mainClassName=getClassNameForSection(sectionKey);
  ClassMetadata mainMetadata=service.getClassMetadata(getSectionPersistencePackageRequest(mainClassName));
  Property collectionProperty=mainMetadata.getPMap().get(collectionField);
  ListGrid listGrid=getCollectionListGrid(mainMetadata,id,collectionProperty,criteriaForm.getCriteria().toArray(new FilterAndSortCriteria[criteriaForm.getCriteria().size()]));
  model.addAttribute("listGrid",listGrid);
  EntityForm entityForm=new EntityForm();
  entityForm.setId(id);
  model.addAttribute("entityForm",entityForm);
  setModelAttributes(model,sectionKey);
  return "views/standaloneListGrid";
}
